

<header class="header">
	<div class="container">
		<div class="row align-items-center">
			<!--Logo-->
			<div class="col-lg-3 col-md-6 col-6 logo">
				<a href="/" class="d-inline-block">
					<img src="~/images/logo.webp" alt="Logo" />
				</a>
			</div>
			<!--Menu Desktop-->
			<div class="col-lg-6 d-none d-lg-block">
				<ul class="menu-desktop d-flex justify-content-center">
					<li>
						<a href="/" class="text-uppercase">
							Home
						</a>
					</li>
					<li>
						<a href="/About" class="text-uppercase">
							About
						</a>
					</li>
					<li>
						<a href="/Products" class="text-uppercase">
							Products
						</a>
						@await Component.InvokeAsync("Category")
					</li>
					<li>
						<a href="/Blog" class="text-uppercase">
							Blog
						</a>
					</li>
					<li>
						<a href="/Contact" class="text-uppercase d-inline-block">
							Contact us
						</a>
					</li>
				</ul>
			</div>
			<!--Icon-->
			<div class="col-lg-3 col-md-6 col-6">
				<div class="d-flex justify-content-end">
					<div class="header-action">
						<button type="button" title="Search" id="header-search" class="d-flex">
							<i class="pe-7s-search"></i>
						</button>
					</div>
					<div class="header-action">
						<a href="/Account" title="Account" class="d-flex">
							<i class="pe-7s-user"></i>
						</a>
					</div>
					<div class="header-action">
						<a href="/wishlist" title="Wishlist" class="d-flex">
							<i class="pe-7s-like"></i>
						</a>
					</div>
					<!--Cart-->
					<div class="header-action">
						<a href="/cart" title="Cart" class="d-flex position-relative">
							<i class="pe-7s-shopbag"></i>
							<span class="product-count bg-black">01</span>
						</a>
					</div>
					<div class="header-action d-lg-none">
						<button type="button" title="Menu" class="d-flex">
							<i class="pe-7s-menu"></i>
						</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</header>