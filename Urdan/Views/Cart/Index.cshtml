@model Cart?;

@{
	ViewBag.Title = "Cart";
}

<partial name="_Breadcrumb" />
<div class="container pt-100 pb-100">
	<div class="row">
		<div class="col-12">
			<table class="table cart-table">
				<thead>
					<tr>
						<th></th>
						<th>
							Product
						</th>
						<th>@Html.DisplayNameFor(model => model.CartItems.First().Price)</th>
						<th>@Html.DisplayNameFor(model => model.CartItems.First().Quantity)</th>
						<th>Subtotal</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@if (Model != null && Model.CartItems.Count() > 0)
					{
						@foreach (var cartItem in Model.CartItems)
						{
							<tr>
								<td>
									<img src="@cartItem.Image" alt="Product Image" width="80" />
								</td>
								<td>
									<a asp-action="Index" asp-route-name="@cartItem.ProductName" asp-controller="Product">
										@cartItem.ProductName
									</a>
								</td>
								<td>
									$@cartItem.Price
								</td>
								<td>
									@cartItem.Quantity
								</td>
								<td>
									$@cartItem.SubTotal
								</td>
								<td>
									<button type="button">
										<i class="ti-trash"></i>
									</button>
								</td>
							</tr>
						}
					}

				</tbody>
			</table>
			<div class="cart-update">
				<a asp-action="Products" asp-controller="Products" class="btn-hover">Continue Shopping</a>
				<div>
					<a asp-action="UpdateCart" asp-route-cart="@Model" class="btn-hover">Update Cart</a>
					<a asp-action="ClearCart" class="btn-hover">Clear Cart</a>
				</div>
			</div>
		</div>
	</div>
</div>


